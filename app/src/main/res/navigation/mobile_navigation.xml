<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.android_application.fragments.home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.android_application.fragments.Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.android_application.fragments.notification"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_market"
        android:name="com.example.android_application.fragments.market"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.android_application.fragments.profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>